<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    <style name="TasksAtHandTheme"
        parent="@android:style/Theme.Holo.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/TasksAtHandActionBar</item>
    </style>
    
    <style name="TasksAtHandActionBar"
        parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@color/tasksAtHandPrimaryActionBar</item>
        <item name="android:titleTextStyle">@style/TasksAtHandActionBarTitleText</item>
    </style>
    
    <style name="TasksAtHandActionBarTitleText"
           parent="@android:style/TextAppearance.Holo.Widget.ActionMode.Title.Inverse">
        <item name="android:textColor">@color/tasksAtHandActionBarText</item>
    </style>

</resources>
