<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/taskPanelHeight_xhdp"
    android:background="@color/lightText"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/taskPanelLinearLayout"
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:gravity="center_vertical">

        <LinearLayout
            android:layout_width="@dimen/userImageSize_xhdp"
            android:layout_height="@dimen/userImageSize_xhdp"
            android:orientation="vertical"
            android:layout_margin="@dimen/tinyMargin_xhdpi">

            <in.altersense.taskapp.customviews.CustomFontTextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_horizontal|top"
                app:customFont="@string/font_textCondensed"
                android:text="123"
                android:textColor="@color/positive"
                android:textSize="@dimen/text_dueDats_xhdpi"/>

            <in.altersense.taskapp.customviews.CustomFontTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="DAYS"
                android:gravity="center_horizontal"
                app:customFont="@string/font_textCondensed"
                android:textColor="@color/positive"
                android:textSize="@dimen/text_small_xhdpi"/>

        </LinearLayout>

        <LinearLayout android:id="@+id/taskContentLinearLayout"
            android:orientation="vertical"
            android:layout_height="@dimen/userImageSize_xhdp"
            android:layout_width="0dp"
            android:layout_weight="1" >

            <TextView android:id="@+id/taskTitleTextView"
                android:text="Boil Eggs"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textColor="@color/primaryText"
                android:textSize="@dimen/text_subHeader_xhdpi"/>

            <TextView android:id="@+id/taskDescriptionTextView"
                android:text="Task Title goes here - This is a task description in short terms!"
                android:lines="2"
                android:maxLines="2"
                android:ellipsize="end"
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:textColor="@color/secondaryText"
                android:textSize="@dimen/text_small_xhdpi"/>

        </LinearLayout>

        <RelativeLayout android:id="@+id/taskStatusLinearLayout"
            android:layout_width="@dimen/taskStatusStripWidth_xhdp"
            android:layout_height="fill_parent"
            android:layout_marginLeft="@dimen/smallMargin_xhdp"
            android:background="#48BA1A"></RelativeLayout>

    </LinearLayout>
    
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:src="@drawable/line"/>
    
</LinearLayout>