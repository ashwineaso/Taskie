<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/lightText"
    android:animateLayoutChanges="true"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <LinearLayout android:id="@+id/taskPanelLinearLayout"
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:layout_width="match_parent" >

        <LinearLayout android:id="@+id/taskStatusLinearLayout"
            android:layout_width="@dimen/taskStatusStripWidth_xhdp"
            android:layout_height="fill_parent"
            android:orientation="horizontal"
            android:background="#ff0fa0ae"
            android:layout_marginRight="@dimen/tinyMargin_xhdpi" />

        <LinearLayout
            android:layout_width="@dimen/userImageWidth_xhdp"
            android:layout_height="@dimen/userImageHeight_xhdp"
            android:orientation="vertical"
            android:layout_gravity="center_vertical"
            tools:ignore="MissingPrefix"
            android:layout_margin="@dimen/tinyMargin_xhdpi">

            <TextView
                android:id="@+id/timeStatusCustomFontTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                fontPath="fonts/Cabin-Regular-TTF.ttf"
                android:textColor="@color/duedatetime"
                android:textSize="@dimen/text_normal_xhdpi"
                android:text="Due In"/>

            <TextView
                android:id="@+id/timeMeasureCustomFontTextView"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:singleLine="true"
                android:lines="1"
                fontPath="fonts/Cabin-Regular-TTF.ttf"
                android:gravity="center"
                android:text="123"
                android:textColor="@color/duedatetime"
                android:textSize="@dimen/text_dueDats_xhdpi"/>

            <TextView
                android:id="@+id/timeUnitTextCustomFontTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Days"
                android:gravity="center_horizontal|bottom"
                fontPath="fonts/Cabin-Regular-TTF.ttf"
                android:textColor="@color/duedatetime"
                android:textSize="@dimen/text_normal_xhdpi"/>

        </LinearLayout>

        <LinearLayout android:id="@+id/taskContentLinearLayout"
            android:orientation="vertical"
            android:layout_gravity="center_vertical"
            android:layout_height="@dimen/userImageHeight_xhdp"
            android:layout_width="0dp"
            android:layout_weight="1"
            tools:ignore="MissingPrefix"
            android:paddingLeft="5dp">

            <TextView android:id="@+id/taskTitleTextView"
                android:text="Boil Eggs"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textColor="@color/primaryText"
                fontPath="fonts/Cabin-Regular-TTF.ttf"
                android:textSize="@dimen/text_header_xhdpi"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <HorizontalScrollView
                    android:layout_width="fill_parent"
                    android:scrollbars="none"
                    android:layout_height="@dimen/userImageWidth_xhdp">

                    <LinearLayout android:id="@+id/collaboratorsList"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        </LinearLayout>

                    </HorizontalScrollView>

                <LinearLayout android:id="@+id/taskIconsListLinearLayout"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:layout_gravity="right"
                        android:gravity="right">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:src="@android:drawable/ic_input_get"/>

                        </LinearLayout>

                </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout android:id="@+id/actionsPlaceHolderLinearLayout"
        android:animateLayoutChanges="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:src="@drawable/line"/>

</LinearLayout>