<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:tools2="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="fill_parent"
    android:background="@color/secondaryText"
    tools:context="in.altersense.taskapp.TaskActivity"
    tools2:ignore="MissingPrefix"
    android:id="@+id/detailsScrollView">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/scrollHolder"
            android:paddingLeft="@dimen/tinyMargin_xhdpi"
            android:paddingRight="@dimen/tinyMargin_xhdpi"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/abc_popup_background_mtrl_mult">

                <LinearLayout android:id="@+id/taskHeaderLinearLayout"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/smallMargin_xhdp"
                    android:background="@color/createTaskPrimaryActionBar"
                    android:gravity="center_vertical">

                    <TextView android:id="@+id/taskOwnerTV"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/lightText"
                        android:textSize="@dimen/text_header_xhdpi"
                        fontPath="fonts/Cabin-SemiBold-TTF.ttf"
                        tools2:ignore="MissingPrefix"/>

                </LinearLayout>

                <LinearLayout android:id="@+id/taskDetailsRelativeLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/lightText"
                    android:orientation="vertical">

                    <LinearLayout android:id="@+id/taskMainLinearLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/smallMargin_xhdp"
                        android:orientation="vertical">

                        <TextView android:id="@+id/taskTitleTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/smallMargin_xhdp"
                            android:textSize="@dimen/text_header_xhdpi"
                            android:text="Title of the Task"
                            fontPath="fonts/Cabin-SemiBold-TTF.ttf"
                            tools2:ignore="MissingPrefix"/>

                        <TextView android:id="@+id/dueDateTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/smallMargin_xhdp"
                            android:text="Due on 25 Dec, 2014"
                            android:textSize="@dimen/text_small_xhdpi"
                            fontPath="fonts/Cabin-Medium-TTF.ttf"
                            tools2:ignore="MissingPrefix"/>

                    </LinearLayout>

                    <TextView android:id="@+id/taskDescriptionTextView"
                        android:layout_width="match_parent"
                        android:layout_height="90dp"
                        android:layout_below="@id/taskMainLinearLayout"
                        android:padding="@dimen/smallMargin_xhdp"
                        android:textSize="16dp"
                        android:text="As I said earlier, this is a longer description of the task for the recieve to understand what the hell is going on."/>

                    <TextView android:id="@+id/taskPriorityTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/smallMargin_xhdp"
                        android:layout_marginRight="@dimen/smallMargin_xhdp"
                        android:textSize="16dp"
                        android:layout_below="@id/taskDescriptionTextView"
                        android:textColor="@color/taskSecondaryAccent"
                        android:text="High Priority"/>

                    <!--<TextView android:id="@+id/taskAttachmentTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/smallMargin_xhdp"
                        android:textSize="16dp"
                        android:layout_below="@id/taskPriorityTextView"
                        android:textColor="@color/taskAccentColor"
                        android:text="Attatchment: Profile_Picture.jpg"/>-->

                    <LinearLayout android:id="@+id/taskStatusLinearLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/smallMargin_xhdp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView android:id="@+id/taskStatusTextView"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/text_normal_xhdpi"
                            fontPath="fonts/Cabin-SemiBold-TTF.ttf"
                            android:text="Status: Ongoing"/>

                        <ImageView
                            android:layout_width="@dimen/statusCircleDiameter_xhdp"
                            android:layout_height="@dimen/statusCircleDiameter_xhdp"
                            android:src="@drawable/done_notif"
                            android:layout_marginRight="8dp"
                            android:id="@+id/change_status_btn" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/menu"/>

                    </LinearLayout>

                    </LinearLayout>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/tinyMargin_xhdpi"
                android:layout_marginBottom="@dimen/tinyMargin_xhdpi"
                android:paddingLeft="@dimen/smallMargin_xhdp"
                fontPath="fonts/Cabin-SemiBold-TTF.ttf"
                tools2:ignore="MissingPrefix"
                android:text="COLLABORATORS"
                android:textSize="@dimen/text_normal_xhdpi"
                android:textColor="@color/headerText"
                android:id="@+id/headingCollaborators" />

            <ListView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/collListView" />

        </LinearLayout>


</ScrollView>
