<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="MissingPrefix"
    android:orientation="vertical" android:layout_width="match_parent"
    android:gravity="center_vertical"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/finalPageLine1"
        style="@style/TutorialHugeSubtitle"
        android:gravity="center_horizontal"
        android:text="@string/finalPageLine1"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/label_beginTaskie"
        android:paddingTop="@dimen/smallMargin_xhdpi"
        android:paddingBottom="@dimen/smallMargin_xhdpi"
        android:id="@+id/btnBeginTaskie"
        style="@style/primaryButton"
        android:visibility="gone"
        android:layout_below="@id/finalPageLine1"
        android:layout_margin="16dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/label_continueTaskie"
        android:paddingTop="@dimen/smallMargin_xhdpi"
        android:paddingBottom="@dimen/smallMargin_xhdpi"
        android:id="@+id/btnConitinueTaskie"
        style="@style/primaryButton"
        android:visibility="gone"
        android:layout_below="@id/btnBeginTaskie"
        android:layout_margin="16dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnConitinueTaskie"
        android:id="@+id/finalPageLine2"
        style="@style/TutorialText"
        android:gravity="center_horizontal"
        android:text="@string/finalPageLine2" />

</RelativeLayout>