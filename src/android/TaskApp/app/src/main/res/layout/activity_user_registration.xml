<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:tools2="http://schemas.android.com/tools"
    tools2:ignore="MissingPrefix"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="in.altersense.taskapp.UserRegistrationActivity"
    android:background="@color/white"
    android:gravity="center_vertical|center_horizontal"
    android:padding="@dimen/smallMargin_xhdpi">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            style="@style/LogoImage"
            android:id="@+id/imageView3" />

        <TextView
           style="@style/LogoCompanionText" />

        <TextView
            style="@style/BetaBadge" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/label_SignUp"
        fontPath="fonts/Cabin-SemiBold-TTF.ttf"
        android:textSize="@dimen/text_header_xhdpi"
        android:layout_marginBottom="@dimen/smallMargin_xhdpi"
        android:textColor="@color/createTaskPrimaryActionBar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/ic_user"
            android:scaleType="center"
            android:background="@color/transparent"/>

        <EditText android:id="@+id/regNameET"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:hint="@string/hint_FullName"
            fontPath="fonts/Cabin-SemiBold-TTF.ttf"
            android:capitalize="words"
            android:inputType="textCapWords"
            android:lines="1" />

        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/ic_email"
            android:scaleType="center"
            android:background="@color/transparent"/>

        <EditText android:id="@+id/regEmailET"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:layout_gravity="center_horizontal"
            android:hint="@string/hint_Email"
            fontPath="fonts/Cabin-SemiBold-TTF.ttf"/>

        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/ic_key"
            android:scaleType="center"
            android:background="@color/transparent"/>

        <EditText android:id="@+id/regPasswordET"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:hint="@string/hint_Password"
            fontPath="fonts/Cabin-SemiBold-TTF.ttf"/>

        <ImageButton android:id="@+id/regShowPassButton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/ic_action_showpassword"
            android:scaleType="center"
            android:background="@color/transparent"/>

        </LinearLayout>

    <Button android:id="@+id/regButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        style="@style/primaryButton"
        android:layout_marginTop="@dimen/smallMargin_xhdpi"
        android:text="@string/label_Register"
        android:gravity="center_vertical|center_horizontal" />

</LinearLayout>
