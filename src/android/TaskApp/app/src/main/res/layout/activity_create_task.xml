<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/smallMargin_xhdp"
    tools:context="in.altersense.taskapp.CreateTaskActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/subHeaderHeight_xhdp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:gravity="center"
            android:text="To" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:singleLine="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/bigMargin_xhdp"
            android:gravity="center_vertical|left"/>

        </RelativeLayout>

    <EditText android:id="@+id/taskTitleEditText"
        android:hint="Task Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"/>

    <EditText android:id="@+id/taskDescriptionEditText"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="top"
        android:inputType="textMultiLine"
        android:hint="Task Description"
        android:layout_weight="1"/>

    <EditText android:id="@+id/dueDateEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Due Date and Time"
        android:enabled="false"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText android:id="@+id/fileAttachmentEditText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:editable="false"
            android:layout_weight="1"
            android:hint="File Attachment"/>

        <Button android:id="@+id/fileAttachmentButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+"
            android:layout_gravity="center"
            android:gravity="center"/>

        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/smallMargin_xhdp"
        android:layout_marginRight="@dimen/smallMargin_xhdp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/secondaryText"
            android:text="Priority"/>

        <SeekBar
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:progressDrawable="@drawable/scrubber_progress"
            android:thumb="@drawable/scrubber_control"
            android:max="3" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/primaryText"
            android:text="Medium"/>

        </LinearLayout>

    
</LinearLayout>
