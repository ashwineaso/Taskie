<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="in.altersense.taskapp.CreateTaskActivity"
    android:background="#fffbfaff"
    tools:ignore="MissingPrefix">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:padding="@dimen/smallMargin_xhdp">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Task Title"
            android:id="@+id/lbl_title"
            android:layout_margin="@dimen/tinyMargin_xhdpi"
            android:textSize="@dimen/text_normal_xhdpi"
            android:textColor="@color/headerText"
            fontPath="fonts/Cabin-SemiBold-TTF.ttf"/>

        <EditText android:id="@+id/taskTitleEditText"
            android:hint="Task Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"/>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Task Description"
            android:id="@+id/lbl_desc"
            android:layout_margin="@dimen/tinyMargin_xhdpi"
            android:paddingTop="@dimen/smallMargin_xhdp"
            android:textColor="@color/headerText"
            android:textSize="@dimen/text_normal_xhdpi"
            fontPath="fonts/Cabin-SemiBold-TTF.ttf"/>

        <EditText android:id="@+id/taskDescriptionEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxHeight="@dimen/bigMargin_xhdp"
            android:gravity="top"
            android:inputType="textMultiLine"
            android:hint="Task Description"/>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Collaborators"
            android:id="@+id/lbl_colls"
            android:layout_margin="@dimen/tinyMargin_xhdpi"
            android:paddingTop="@dimen/smallMargin_xhdp"
            android:textColor="@color/headerText"
            android:textSize="@dimen/text_normal_xhdpi"
            fontPath="fonts/Cabin-SemiBold-TTF.ttf"/>

        <in.altersense.taskapp.customviews.TokenCompleteCollaboratorsEditText
            android:id="@+id/collaboratorsTCET"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/tokenEditText" />

        <TextView android:id="@+id/dueDateTextView"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="Tap to set Due Date and Time"
            android:layout_margin="@dimen/tinyMargin_xhdpi"
            android:textSize="@dimen/text_subHeader_xhdpi"
            android:paddingTop="@dimen/smallMargin_xhdp"
            android:textColor="@color/headerText" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/headerText"
            android:layout_gravity="center_vertical"
            android:text="Priority"
            android:id="@+id/lbl_priority"
            android:layout_margin="@dimen/tinyMargin_xhdpi"
            android:paddingTop="@dimen/smallMargin_xhdp"
            android:textSize="@dimen/text_normal_xhdpi"
            fontPath="fonts/Cabin-SemiBold-TTF.ttf"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="@dimen/tinyMargin_xhdpi">

            <SeekBar android:id="@+id/prioritySeekBar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:max="2" />

            <TextView android:id="@+id/priorityTextView"
                android:layout_width="@dimen/priorityTextViewWidth_xhdpi"
                android:layout_height="wrap_content"
                android:textColor="@color/primaryText"
                android:layout_gravity="center"
                android:text="Medium"/>

            </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/smallMargin_xhdp">

            <Button android:id="@+id/createTaskButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/label_createTask"
                style="@style/primaryButton"
                android:textSize="@dimen/text_subHeader_xhdpi" />

            <Button android:id="@+id/updateTaskButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/labbel_updateTask"
                style="@style/primaryButton"/>

            </LinearLayout>
    </LinearLayout>

</ScrollView>