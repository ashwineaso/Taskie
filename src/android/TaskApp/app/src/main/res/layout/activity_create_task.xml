<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="in.altersense.taskapp.CreateTaskActivity"
    android:background="#fffbfaff"
    tools:ignore="MissingPrefix">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:padding="@dimen/smallMargin_xhdpi">

        <com.wrapp.floatlabelededittext.FloatLabeledEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText android:id="@+id/taskTitleEditText"
                android:hint="Task Title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:capitalize="sentences"
                android:textColorHint="@color/taskPrimaryColor"
                fontPath="fonts/Cabin-SemiBold-TTF.ttf"
                android:inputType="textCapSentences"
                android:textColor="@color/primaryText" />
        </com.wrapp.floatlabelededittext.FloatLabeledEditText>


        <com.wrapp.floatlabelededittext.FloatLabeledEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/tinyMargin_xhdpi">

            <EditText android:id="@+id/taskDescriptionEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxHeight="@dimen/bigMargin_xhdp"
                android:gravity="top"
                android:inputType="textMultiLine"
                android:hint="Task Description"
                android:textColorHint="@color/taskPrimaryColor"
                fontPath="fonts/Cabin-SemiBold-TTF.ttf"
                android:capitalize="sentences"
                android:textColor="@color/primaryText" />
        </com.wrapp.floatlabelededittext.FloatLabeledEditText>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Collaborators"
            android:id="@+id/lbl_colls"
            android:layout_margin="@dimen/tinyMargin_xhdpi"
            android:paddingTop="@dimen/smallMargin_xhdpi"
            android:textColor="@color/headerText"
            android:textSize="@dimen/text_normal_xhdpi"
            fontPath="fonts/Cabin-SemiBold-TTF.ttf"/>

        <in.altersense.taskapp.customviews.TokenCompleteCollaboratorsEditText
            android:id="@+id/collaboratorsTCET"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/tokenEditText" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="@dimen/tinyMargin_xhdpi"
            android:layout_gravity="center_vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView"
                android:src="@drawable/ic_calender" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/dueDateTextView"
                android:textSize="@dimen/text_normal_xhdpi"
                android:textColor="@color/headerText"
                android:hint="Tap to set Due Date and Time" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btnCancelDate"
                android:src="@drawable/ic_cancel"
                android:layout_gravity="right" />

        </LinearLayout>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/headerText"
            android:layout_gravity="center_vertical"
            android:text="Priority"
            android:id="@+id/lbl_priority"
            android:layout_margin="@dimen/tinyMargin_xhdpi"
            android:paddingTop="@dimen/smallMargin_xhdpi"
            android:textSize="@dimen/text_normal_xhdpi"
            fontPath="fonts/Cabin-SemiBold-TTF.ttf"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="@dimen/tinyMargin_xhdpi">

            <SeekBar android:id="@+id/prioritySeekBar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:max="2" />

            <TextView android:id="@+id/priorityTextView"
                android:layout_width="@dimen/priorityTextViewWidth_xhdpi"
                android:layout_height="wrap_content"
                android:textColor="@color/primaryText"
                android:layout_gravity="center"
                android:text="Medium"/>

            </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/smallMargin_xhdpi">

            <Button android:id="@+id/createTaskButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/label_createTask"
                style="@style/primaryButton"
                android:textSize="@dimen/text_subHeader_xhdpi" />

            <Button android:id="@+id/updateTaskButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/labbel_updateTask"
                style="@style/primaryButton"/>

            </LinearLayout>
    </LinearLayout>

</ScrollView>