<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="in.altersense.taskapp" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppBaseTheme" >
        <activity
            android:name=".TasksActivity"
            android:label="@string/app_name"
            android:theme="@style/TasksAtHandTheme" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".CreateTaskActivity"
            android:label="@string/title_activity_create_task"
            android:theme="@style/CreateTasksTheme" >
        </activity>
        <activity
            android:name=".TaskActivity"
            android:label="@string/title_activity_task"
            android:theme="@style/TaskTheme" >
        </activity>
        <activity
            android:name=".GroupActivity"
            android:label="@string/title_activity_group"
            android:theme="@style/GroupActivityTheme" >
        </activity>
        <activity
            android:name=".UserRegistrationActivity"
            android:label="@string/title_activity_user_registration"
            android:theme="@style/RegisterTheme" >
        </activity>
        <activity
            android:name=".UserLoginActivity"
            android:theme="@style/RegisterTheme"
            android:label="@string/title_activity_user_login" >
        </activity>
    </application>

</manifest>
